<div class = "container">
  <div class = "new_post">
    <%= link_to '新規投稿', new_blog_path, class: "btn btn-info" %>
  </div>

    <% @blogs.each do |blog| %>
    <div class = "contents_field">
        <%# 投稿 %>
  
        <%# ユーザー名とメニュー %>
        <div class = "post_head">
          <div class = "user_name">
            <%= blog.user.name %>
          </div>
          <div class = "post_nav">
            <ul id = "post_menu">
              <li><%= link_to '詳細', blog_path(blog.id) %></li>
              <% if blog.user == current_user %>
                <li><%= link_to '編集', edit_blog_path(blog.id) %></li>
                <li><%= link_to '削除', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除してよろしですか？'} %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <%# 投稿本文 %>
          
          <%# 画像 %>
          <% if blog.image.url%>
            <div class = "content_text">
              <%= blog.content %>
            </div>
            <div class = "content_image">
              <%= image_tag blog.image.url %>
            </div>
          <% else %>
            <%# テキストのみ %>
            <div class = "content_text_only">
              <%= blog.content %>
            </div>
          <% end %>
      
    </div>
  <% end %>
</div>