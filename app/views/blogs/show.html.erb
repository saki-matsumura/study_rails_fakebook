<div class = "container">

  <div class = "heading">
    <h2>詳細</h2>
  </div>

  <div class = "content_text">
    <%= @blog.content %>
  </div>

  <% if @blog.image && @blog.image.url%>
    <div class = "content_image">
      <%= image_tag @blog.image.url %>
    </div>
  <% end %>

  <div class = "btn_back btn btn-info">
    <a href="/blogs">ホームに戻る</a>
  </div>
  
</div>